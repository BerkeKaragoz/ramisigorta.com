---
import Base from "../layouts/Main.astro"
import BaseHead from "../components/BaseHead.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import ServiceCard from "../components/ServiceCard.astro"
import { defaultToInt } from "@/lib/numberOperations"
import Logo from "../assets/images/logo.png"
import ContactData from "../assets/data/contact.json"
import InstagramIcon from "../assets/social-icons/icons8-instagram.svg"
import WhatsappIcon from "../assets/social-icons/icons8-whatsapp.svg"
import IconWrapper from "../components/IconWrapper.astro"

const DEFAULT_PAGE = 1
const DEFAULT_PAGE_SIZE = 9

const page = defaultToInt(Astro.url.searchParams.get("page"), DEFAULT_PAGE)
const pageSize = defaultToInt(
   Astro.url.searchParams.get("page_size"),
   DEFAULT_PAGE_SIZE
)
const insuranceServices = [
   {
      imageSrc: "services/products.jpeg",
      imageAlt: "Sigorta ürünleri",
      title: "Sigorta Ürünleri",
      desc: "Doğru sigorta ürünlerini seçmenize yardımcı oluyoruz.",
   },
   {
      imageSrc: "services/preparing.jpg",
      imageAlt: "Sigorta poliçesi hazırlama",
      title: "Sigorta Poliçesi Hazırlama",
      desc: "İhtiyaçlarınıza göre sigorta poliçeleri hazırlayabilir ve size sunabiliriz.",
   },
   {
      imageSrc: "services/insurance-claim.jpg",
      imageAlt: "Sigorta talepleri",
      title: "Sigorta Talepleri",
      desc: "Taleplerinizi sigorta şirketleri ile iletişim kurarak yönetebiliriz.",
   },
   {
      imageSrc: "services/renewal.png",
      imageAlt: "Sigorta sözleşmesi yenileme",
      title: "Sigorta Sözleşmesi Yenileme",
      desc: "Sizin sigorta sözleşmelerinizin yenilenmesi için gerekli prosedürleri takip edebiliriz.",
   },
   {
      imageSrc: "services/tracking.png",
      imageAlt: "Sigorta taleplerinin takibi",
      title: "Sigorta Taleplerinin Takibi",
      desc: "Taleplerinizin durumunu takip edebilir ve süreç hakkında bilgi verebiliriz.",
   },
   {
      imageSrc: "services/consulting.png",
      imageAlt: "Danışmanlık hizmetleri",
      title: "Danışmanlık Hizmetleri",
      desc: "Sigorta ihtiyaçlarınız hakkında danışmanlık hizmetleri sunabiliriz.",
   },
   {
      imageSrc: "services/comparison.jpg",
      imageAlt: "Sigorta ürünleri karşılaştırması",
      title: "Sigorta Ürünleri Karşılaştırması",
      desc: "Farklı sigorta şirketlerinin ürünlerini karşılaştırarak müşterilerin doğru sigorta ürünlerini seçmelerine yardımcı olabiliriz.",
   },
   {
      imageSrc: "services/premium.webp",
      imageAlt: "Prim ödemeleri hakkında yardım",
      title: "Prim Ödemeleri Hakkında Yardım",
      desc: "Size prim ödemeleri konusunda yardımcı olabilir ve ödemelerinizi takip edebiliriz.",
   },
]
---

<Base class="app-container max-w-6xl">
   <section class="mt-20 grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
      {insuranceServices.map((props) => <ServiceCard {...props} />)}
   </section>

   <section class="mt-16 space-y-8">
      <p class="text-black">
         Şirketimiz 1999 yılında Sigorta acenteliğiyle başladığı sigortacılık
         faaliyetlerine, bugün Türkiye ve dünyanın önce gelen sigorta şirketlerinin
         acenteliği ile tüm sigortacılık branşlarında devam etmektedir.
      </p>
      <h6 class="text-xl underline decoration-primary">İletişim Bilgileri</h6>
      <div class="space-y-2">
         <a
            href={`http://maps.google.com/?q=${ContactData.address}`}
            target="_blank"
            class="flex items-center gap-2 hover:text-primary"
         >
            <IconWrapper>
               <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="h-6 w-6"
               >
                  <path
                     stroke-linecap="round"
                     stroke-linejoin="round"
                     d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418"
                  ></path>
               </svg>
            </IconWrapper>
            {ContactData.address}
         </a>
         <a
            href={`tel:${ContactData.fax}`}
            target="_blank"
            class="flex items-center gap-2 hover:text-primary"
         >
            <IconWrapper>
               <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="h-6 w-6"
               >
                  <path
                     stroke-linecap="round"
                     stroke-linejoin="round"
                     d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                  ></path>
               </svg>
            </IconWrapper>
            <p>{ContactData.fax}</p>
         </a>
         <a
            href={`tel:${ContactData.cellphone}`}
            target="_blank"
            class="flex items-center gap-2 hover:text-primary"
         >
            <IconWrapper>
               <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="h-6 w-6"
               >
                  <path
                     stroke-linecap="round"
                     stroke-linejoin="round"
                     d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                  ></path>
               </svg>
            </IconWrapper>
            {ContactData.cellphone}
         </a>
         <a
            href={`mailto:${ContactData.email}`}
            target="_blank"
            class="flex items-center gap-2 hover:text-primary"
         >
            <IconWrapper>
               <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="h-6 w-6"
               >
                  <path
                     stroke-linecap="round"
                     stroke-linejoin="round"
                     d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                  ></path>
               </svg>
            </IconWrapper>
            {ContactData.email}
         </a>
      </div>
      <div class="flex items-center gap-2">
         <a href="https://www.instagram.com/ramisigorta/" target="_blank">
            <img src={InstagramIcon} alt="Instagram" class="h-12 w-auto" />
         </a>
         <a href="https://api.whatsapp.com/send?phone=905327357272" target="_blank"
            ><img src={WhatsappIcon} alt="Whatsapp" class="h-12 w-auto" />
         </a>
      </div>
   </section>
</Base>
